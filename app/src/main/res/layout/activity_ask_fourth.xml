<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context=".ActivityAskFourth">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/cuatro" />

    <Button
        android:id="@+id/Button"
        android:layout_width="335dp"
        android:layout_height="49dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/boton_redondo"
        android:onClick="Next"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/next_Button"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="303dp"
        android:layout_height="197dp"
        android:layout_marginTop="248dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/option_one_readio_button"
            android:layout_width="315dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:checked="false"
            android:paddingLeft="15dp"
            android:text="@string/option1_ask_fourth_RadioButton"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:theme="@style/MyRaidoButtonTwo" />

        <RadioButton
            android:id="@+id/option_two_readio_button"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_weight="1"
            android:checked="false"
            android:paddingLeft="15dp"
            android:text="@string/option2_ask_fourth_RadioButton"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:theme="@style/MyRaidoButtonTwo" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="21dp"
        android:layout_marginLeft="98dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="25dp"
        android:text="@string/warning_TexView"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="225dp"
        android:layout_height="100dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:text="@string/fourth_question_TexView"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>